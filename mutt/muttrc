# the file contains only basic settings; no personal data
# should be placed here, use ~/.mutt/muttrc file for that

# Use vim as editor without word wrap
set editor="vim +':set textwidth=0'"

set imap_check_subscribed
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set record = ""
set move = no
set include = yes
set sort = "threads"
set strict_threads = yes
set sort_aux = "reverse-last-date-received"
set auto_tag = yes

# Aliases
set alias_file = ~/Yandex.Disk/private_configs/muttrc_aliases
source $alias_file

# Vim style quit
bind index,pager ZZ quit

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"

hdr_order Date From To Cc

set mailcap_path    = ~/.mutt/mailcap
alternative_order text/plain text/html *
auto_view text/html
